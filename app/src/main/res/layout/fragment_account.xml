<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F5FC"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="금액 입력(외화)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6200EE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDeposit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="+ 입금"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnWithdraw"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="- 지불"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2024.11.28 기준 환율\nUSD 1 = 1393 KRW"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쓴 돈"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#6200EE" />

            <TextView
                android:id="@+id/textSpentUSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD 0" />

            <TextView
                android:id="@+id/textSpentKRW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KRW 0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 돈"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#6200EE" />

            <TextView
                android:id="@+id/textRemainingUSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD 100" />

            <TextView
                android:id="@+id/textRemainingKRW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KRW 139300" />
        </LinearLayout>
    </LinearLayout>

